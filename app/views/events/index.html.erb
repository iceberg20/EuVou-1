<center>
<h1>O site de eventos mais badadaldo.</h1>


<% if user_signed_in? %>
  <p><%= link_to "Sair", destroy_user_session_path, method: :delete, data: {confirm: "Are you sure?" }, class: 'btn btn-default'%></p>
<% else %>
	<h3>Todo mundo vem. E você?</h3>
	<br>
  <p>
		<%= link_to "#EuVou", new_user_session_path, class: 'btn btn-default', title: "Entrar", rel: 'tooltip' %>
  </p>
<% end %>
<br>
<p>Ou, Entre com
  <%= link_to "Facebook", user_omniauth_authorize_path(:facebook) %> /
  <%= link_to "Twitter", user_omniauth_authorize_path(:twitter) %> /
</p>
</center>


<h2>Últimos eventos</h2>

<table class="table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Criado por</th>
      <th>Data</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
		<% @events.each do |event| %>
      <tr>
				<td class="col-md-6 col-xs-6"><%= event.title %></td>
				<td><%= event.user.present? ? event.user.name : "n/a" %>, <%= time_ago_in_words(event.created_at) %> ago</td>
				<td><%= event.date %></td>
        <td>
					<%= link_to icon('eye-open'), event %>&nbsp;
          <% if user_signed_in? %>
					<%= link_to icon('edit'), edit_event_path(event) if event.updatable_by? current_user %>&nbsp;
					<%= link_to icon('trash'), event, method: :delete, data: { confirm: 'Are you sure?' } if event.deletable_by? current_user %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo evento', new_event_path, class: "btn btn-default" %>