<%= form_for @event, html: {multipart: true} do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
	<%= f.fields_for :adress do |address| %>
		<div>
			<%= address.label :street %>
			<%= address.text_field :street %>
		</div>
		<div>
			<%= address.label :number %>
			<%= address.text_field :number %>
		</div>
		<div>
			<%= address.label :district %>
			<%= address.text_field :district %>
		</div>
		<div>
			<%= address.label :zip_code %>
			<%= address.text_field :zip_code %>
		</div>
		<div>
			<%= address.label :city %>
			<%= address.text_field :city %>
		</div>
		<div>
			<%= address.label :estate %>
			<%= address.text_field :estate %>
		</div>
		<div>
			<%= address.label :country %>
			<%= address.text_field :country %>
		</div>
	<% end %>
  <div class="field">
		<%= f.label :images %>
		<%= f.file_field :images, multiple: true, name: "award[award_imaes][]", accept: "image/jpeg, image/jpg, image/gif, image/png" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

