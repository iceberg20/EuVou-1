    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li <%= active_menu('welcome') %>><%= link_to "Home", root_path %></li>
				<li <%= active_menu('events') %>><%= link_to "Events", events_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.email_verified? ? image_tag(current_user.image) + current_user.name : "Carregando..."   %>
              <%= current_user.identities.size == 0 ? "" : "(via " + current_user.identities.map(&:provider).join("/").titleize + ")" %>
