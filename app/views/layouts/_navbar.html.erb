        <% else %>
          <li class="drowpdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Entre com
              <b class='caret'></b>
            </a>
            <ul class='dropdown-menu'>
							<li><%= link_to "#EuVou", new_user_session_path %></li>
